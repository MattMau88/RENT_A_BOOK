
<!-- main container incl the listed book product cards -->
  <div style="background-color: white" class = "container">

    <h1 class="left-margin" style="text-align: center; margin-bottom: 20px; margin-top: 50px;">Insert Category Here</h1>
    <div style="border-width: 2px; border-style: solid; margin-bottom: 50px;"></div>
     <div class = "row">

        <% @books.each do |book| %>
          <div class="card-product col-sm-6" style="margin-bottom: 100px;">
            <div style="height:260px;width:200px" class="container card-product-infos">
              <img src="https://m.media-amazon.com/images/I/51Sn8PEXwcL.jpg" style="width:100%; height:100%" />
            </div>
            <div style="text-align: center">
              <h2 style="font-size: 18pt;"><%= link_to book.title, book_path(book)%></h2>
              <h2 style="font-size: 15pt" ><%= book.author %></h2>
              <a style="font-size: 15pt"><%= link_to "More details", book_path(book), class: "btn btn-primary" %></a>
              <p></p>
            </div>

            <!-- <img src=<#%= cl_image_path book.photo.key, height: 100%, width: 120, crop: :fill %> /> -->
          </div>
        <% end %>

